<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorBackgroundView"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_layout_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/host_connected_status_icon_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:tint="@color/colorAlert"
            android:src="@drawable/ic_smartphone_off"
            android:contentDescription="@string/image_description" />

        <ImageView
            android:id="@+id/ntp_synchronized_status_icon_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:tint="@color/colorAlert"
            android:src="@drawable/ic_ntp_off"
            android:contentDescription="@string/image_description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_layout_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="-15dp"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/main_layout_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/main_layout_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyDark"
            android:textSize="15sp"
            android:text="@string/app_short_description"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/main_layout_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyDark"
            android:textSize="13sp"
            android:textStyle="italic"/>


    </LinearLayout>

</LinearLayout>