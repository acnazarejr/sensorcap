<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundView"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".activity.MainActivity"
    tools:deviceIds="wear">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_above="@id/bottom_layout"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/status_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_host_connected"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:tint="@color/colorAlert"
                        android:src="@drawable/ic_smartphone_off"
                        android:contentDescription="@string/image_description" />

                    <ImageView
                        android:id="@+id/image_ntp_synchronized"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:tint="@color/colorAlert"
                        android:src="@drawable/ic_ntp_off"
                        android:contentDescription="@string/image_description" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/logo"
                            android:contentDescription="@string/image_description" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="@string/app_name"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="15sp"
                                android:text="@string/start_screen"
                                android:textStyle="italic"/>

                        </LinearLayout>


                    </LinearLayout>

                    <Chronometer
                        android:id="@+id/chronometer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimaryLight"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/image_device_time"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_smartwatch"
                        android:contentDescription="@string/image_description" />

                    <TextView
                        android:id="@+id/text_device_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_tool_dummy_hour"
                        android:textSize="15sp"
                        android:textColor="@color/colorGreyLight"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/image_ntp_time"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_ntp_off"
                        android:contentDescription="@string/image_description" />

                    <TextView
                        android:id="@+id/text_ntp_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_tool_dummy_hour"
                        android:textSize="15sp"
                        android:textColor="@color/colorGreyLight"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/button_control_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/colorDisabled"
            android:src="@drawable/ic_play"
            android:tint="@color/colorGreyLight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:longClickable="true"
            android:contentDescription="@string/image_description" />

        <RelativeLayout
            android:id="@+id/layout_countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundView"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_countdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="120sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.wear.widget.BoxInsetLayout>