<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sensor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorGrey"
        android:textStyle="bold" />

    <!--Model-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="@string/devices_sensor_details_model"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_model"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Vendor-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_vendor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_vendor"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Version-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_version"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_version"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Power-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_power"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_power"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Report Mode-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_report_mode"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_report_mode"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Max Range-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_max_range"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_max_range"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <!--Resolution-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textAlignment="textStart"
            android:text="@string/devices_sensor_details_resolution"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensor_resolution"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@color/colorDivider"/>

    <!--Frequency-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/devices_sensor_details_frequency"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorGrey"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/frequency_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/spacing_xlarge"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensor_min_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorGrey"
            android:textStyle="bold"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/sensor_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:isb_indicator_stay="true"
            app:isb_indicator_color="@color/colorAccent"
            app:isb_indicator_text_color="@color/colorGreyLight"
            app:isb_min="0"
            app:isb_max="100"
            app:isb_progress="90"
            app:isb_seek_bar_type="continuous"
            app:isb_show_indicator="true"
            app:isb_thumb_width="22dp"
            app:isb_thumb_color="@color/colorAccent"
            app:isb_forbid_user_seek="false"
            app:isb_track_background_bar_size="5dp"
            app:isb_track_background_bar_color="@color/colorAccentLight"
            app:isb_track_progress_bar_size="5dp"
            app:isb_track_progress_bar_color="@color/colorAccent"/>

        <TextView
            android:id="@+id/sensor_max_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/sensor_frequency_is_global_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/devices_sensor_details_frequency_global"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorGrey"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/frequency_not_available"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frequency_not_available_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/devices_sensor_details_frequency_not_available"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorGrey"
            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>