<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundView"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/countdown_text"
        android:textStyle="bold"
        android:text="10"/>

    <LinearLayout
        android:id="@+id/layout_during_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_xxlarge"
        android:paddingBottom="@dimen/spacing_xxlarge"
        android:gravity="center"
        android:orientation="vertical">

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/chronometer_text"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_height="wrap_content" />

        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/button_capture_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            app:text_size="@dimen/spacing_smlarge"
            app:text_style="bold"
            app:text="Slide to Stop" />

    </LinearLayout>



</LinearLayout>