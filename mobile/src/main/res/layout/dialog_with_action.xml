<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_500"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_large"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/icon"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adfaf adfa df"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!--<RelativeLayout-->
            <!--android:id="@+id/layout_close"-->
            <!--android:visibility="gone"-->
            <!--android:layout_width="@dimen/spacing_mxlarge"-->
            <!--android:layout_height="@dimen/spacing_mxlarge"-->
            <!--android:layout_margin="@dimen/spacing_medium"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true">-->

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/shape_circle"-->
                <!--android:tint="@android:color/white" />-->

            <!--<ImageButton-->
                <!--android:id="@+id/button_close"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:tint="@color/grey_500"-->
                <!--app:srcCompat="@drawable/ic_close" />-->

        <!--</RelativeLayout>-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/spacing_mlarge">

        <TextView
            android:id="@+id/message"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text=" adfad fasdf adfads sadfadsf asfdadsf asdfadsfadsf adfadsf adf"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_600" />

        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_xlarge"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/grey_400"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/grey_300"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_primary_action"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey_400"
            android:paddingLeft="@dimen/spacing_mlarge"
            android:paddingRight="@dimen/spacing_mlarge"
            android:text="Get Started"
            style="@style/AppCompatButtonNoAllCaps"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_secondary_action"
            android:visibility="gone"
            style="@style/BorderlessNoAllCaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="0dp"
            android:text="@string/reset_to_defaults"
            android:textColor="@color/grey_60" />

    </LinearLayout>

</LinearLayout>